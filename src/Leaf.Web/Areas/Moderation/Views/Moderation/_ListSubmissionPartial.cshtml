@model Leaf.Web.Models.Submit.ShortSubmission

<div class="well">
    <h2 class="media-heading">
        @Html.ActionLink(Model.Condition, "Submission", new { controller = "Moderation", id = Model.Id })
    </h2>

    <ul class="list-inline list-unstyled">
        <li><span><i class="glyphicon glyphicon-user"></i> @Model.Sender</span></li>
        <li><span><i class="glyphicon glyphicon-time"></i> @Model.SentOn</span></li>
    </ul>
</div>